{
  "name": "electronim",
  "version": "0.0.0",
  "description": "Free/Libre open source Electron based multi instant messaging (IM) client.",
  "author": {
    "name": "Marc Nuri",
    "email": "electronim@marcnuri.com",
    "url": "https://www.marcnuri.com"
  },
  "main": "src/index.js",
  "bin": {
    "electronim": "bin.js"
  },
  "files": [
    "assets",
    "build-config",
    "bundles",
    "docs",
    "src",
    "utils"
  ],
  "scripts": {
    "pretest": "eslint -c eslint.config.mjs . && node webpack.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --testMatch='**/?(*.)+(spec|test).e2e.?([mc])[jt]s?(x)' --verbose",
    "prestart": "node webpack.js --no-lib",
    "start": "electron .",
    "prepack": "node webpack.js",
    "prepublish": "node webpack.js",
    "prebuild:linux": "node webpack.js",
    "build:linux": "electron-builder --linux --publish never",
    "prebuild:mac": "node webpack.js",
    "build:mac": "electron-builder --mac --publish never",
    "prebuild:win": "node webpack.js",
    "build:win": "electron-builder --win --publish never"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manusa/electronim.git"
  },
  "keywords": [
    "electron",
    "electronim",
    "IM",
    "chat",
    "tabs",
    "messaging",
    "telegram",
    "whatsapp",
    "slack"
  ],
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/manusa/electronim/issues"
  },
  "homepage": "https://github.com/manusa/electronim#readme",
  "build": {
    "appId": "com.marcnuri.electronim",
    "productName": "ElectronIM",
    "copyright": "Copyright 2019 Marc Nuri",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "extraResources": [
      "assets/*"
    ],
    "snap": {
      "summary": "Free/Libre open source Electron based multi instant messaging (IM) client.",
      "plugs": [
        "alsa",
        "browser-support",
        "camera",
        "desktop",
        "desktop-legacy",
        "device-buttons",
        "display-control",
        "home",
        "io-ports-control",
        "network",
        "network-bind",
        "opengl",
        "pulseaudio",
        "removable-media",
        "screencast-legacy",
        "unity7",
        "wayland",
        "x11"
      ],
      "after": [
        "desktop-gtk3"
      ]
    },
    "linux": {
      "artifactName": "electronim-linux-${arch}.${ext}",
      "executableName": "electronim",
      "category": "Network;InstantMessaging;",
      "synopsis": "Free/Libre open source Electron based multi instant messaging (IM) client.",
      "desktop": {
        "entry": {
          "Terminal": "false",
          "Type": "Application",
          "Categories": "GTK;GNOME;Network;Email;Chat;InstantMessaging;"
        }
      },
      "icon": "icon_1024x1024.png",
      "target": [
        "AppImage",
        "snap",
        "tar.gz"
      ]
    },
    "mac": {
      "artifactName": "electronim-mac-${arch}.${ext}",
      "category": "public.app-category.utilities",
      "icon": "icon_1024x1024.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "build-config/entitlements.mac.plist",
      "entitlementsInherit": "build-config/entitlements.mac.plist"
    },
    "dmg": {
      "title": "ElectronIM",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 122,
          "y": 240,
          "type": "file"
        }
      ],
      "sign": false
    },
    "win": {
      "artifactName": "electronim-win-${arch}.${ext}",
      "icon": "icon.ico",
      "target": [
        "zip",
        "portable"
      ]
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>/src/__tests__/setup-jest.js"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "node-addons"
      ]
    },
    "testMatch": [
      "**/(*.)(spec|test).?(m)js?(x)"
    ],
    "verbose": true
  },
  "devDependencies": {
    "@sonar/scan": "4.3.2",
    "@testing-library/dom": "10.4.1",
    "@testing-library/user-event": "14.6.1",
    "chrome-remote-interface": "0.33.3",
    "chrome-tabs": "5.4.0",
    "css-loader": "7.1.2",
    "electron": "38.2.0",
    "electron-builder": "26.0.12",
    "eslint": "9.34.0",
    "eslint-plugin-jest": "29.0.1",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-environment-node": "30.2.0",
    "jest-extended": "6.0.0",
    "node-abi": "4.14.0",
    "style-loader": "4.0.0",
    "val-loader": "6.0.0",
    "webpack": "5.101.3"
  },
  "dependencies": {
    "axios": "1.12.2",
    "dictionary-ca": "2.6.0",
    "dictionary-ca-valencia": "2.6.0",
    "dictionary-de": "2.0.4",
    "dictionary-en": "3.2.0",
    "dictionary-en-gb": "2.4.0",
    "dictionary-es": "3.2.0",
    "dictionary-eu": "3.2.0",
    "dictionary-fr": "2.8.0",
    "dictionary-it": "1.4.0",
    "dictionary-ka": "1.1.0",
    "dictionary-lt": "1.2.0",
    "dictionary-nl": "1.6.0",
    "dictionary-pl": "1.3.0",
    "dictionary-pt": "^1.3.1",
    "dictionary-pt-br": "^1.2.2",
    "dictionary-ru": "^2.0.1",
    "dictionary-sv": "^3.0.1",
    "dictionary-tr": "^1.3.3",
    "dictionary-uk": "^2.1.1",
    "htm": "3.1.1",
    "markdown-it": "14.1.0",
    "nodehun": "3.0.2",
    "preact": "10.27.1"
  }
}
