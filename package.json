{
  "name": "electronim",
  "version": "0.0.0",
  "description": "Free/Libre open source Electron based multi instant messaging (IM) client.",
  "main": "src/index.js",
  "bin": {
    "electronim": "bin.js"
  },
  "scripts": {
    "pretest": "eslint --ignore-path .gitignore .",
    "start": "electron .",
    "test": "jest --coverage",
    "package-linux": "electron-packager . electronim --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=dist",
    "package-mac": "electron-packager . electronim --overwrite --asar=true --platform=darwin --arch=x64 --prune=true --out=dist",
    "package-win": "electron-packager . electronim --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=dist --version-string.CompanyName=\"Marc Nuri\" --version-string.FileDescription=ElectronIM --version-string.ProductName=\"ElectronIM\"",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manusa/electronim.git"
  },
  "keywords": [
    "electron",
    "electronim",
    "IM",
    "chat",
    "tabs",
    "messaging",
    "telegram",
    "whatsapp",
    "slack"
  ],
  "author": {
    "name": "Marc Nuri",
    "url": "https://www.marcnuri.com"
  },
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/manusa/electronim/issues"
  },
  "homepage": "https://github.com/manusa/electronim#readme",
  "build": {
    "appId": "com.marcnuri.electronim",
    "productName": "ElectronIM",
    "copyright": "Copyright 2019 Marc Nuri",
    "directories": {
      "output": "dist"
    },
    "snap": {
      "summary": "Free/Libre open source Electron based multi instant messaging (IM) client.",
      "plugs": [
        "alsa",
        "browser-support",
        "camera",
        "desktop",
        "desktop-legacy",
        "device-buttons",
        "display-control",
        "home",
        "io-ports-control",
        "network",
        "network-bind",
        "opengl",
        "pulseaudio",
        "removable-media",
        "screencast-legacy",
        "unity7",
        "wayland",
        "x11"
      ],
      "after": [
        "desktop-gtk3"
      ]
    },
    "linux": {
      "artifactName": "electronim-linux-${arch}.${ext}",
      "executableName": "electronim",
      "category": "Network",
      "desktop": {
        "Terminal": "false",
        "Type": "Application",
        "Categories": "GTK;GNOME;Network;Email;Chat;InstantMessaging;"
      },
      "target": [
        "AppImage",
        "snap",
        "tar.gz"
      ]
    },
    "mac": {
      "artifactName": "electronim-mac.${ext}",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "tar.gz"
      ],
      "entitlements": "build-config/entitlements.mac.plist",
      "entitlementsInherit": "build-config/entitlements.mac.plist"
    },
    "dmg": {
      "title": "ElectronIM",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 122,
          "y": 240,
          "type": "file"
        }
      ],
      "sign": false
    },
    "win": {
      "artifactName": "electronim-win-${arch}.${ext}",
      "target": [
        "zip",
        "portable"
      ]
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "node-addons"
      ]
    }
  },
  "devDependencies": {
    "@testing-library/dom": "8.17.1",
    "electron-builder": "23.3.3",
    "electron-packager": "16.0.0",
    "eslint": "8.23.0",
    "eslint-plugin-jest": "27.0.1",
    "jest": "29.0.1",
    "jest-environment-jsdom": "29.0.1",
    "jest-environment-node": "29.0.1",
    "jest-extended": "3.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.4",
    "axios": "0.27.2",
    "bulma": "0.9.4",
    "chrome-tabs": "5.4.0",
    "dictionary-ca": "2.6.0",
    "dictionary-ca-valencia": "2.6.0",
    "dictionary-de": "2.0.4",
    "dictionary-en-gb": "2.4.0",
    "dictionary-en-us": "^2.2.1",
    "dictionary-es": "^3.1.0",
    "dictionary-eu": "^3.1.2",
    "dictionary-fr": "^2.4.1",
    "dictionary-it": "^1.3.2",
    "dictionary-ka": "^1.0.0",
    "dictionary-lt": "^1.0.2",
    "dictionary-nl": "^1.3.3",
    "dictionary-pl": "^1.2.3",
    "dictionary-pt": "^1.3.1",
    "dictionary-pt-br": "^1.2.2",
    "dictionary-ru": "^2.0.1",
    "dictionary-sv": "^3.0.1",
    "dictionary-tr": "^1.3.3",
    "dictionary-uk": "^2.1.1",
    "electron": "19.0.14",
    "htm": "3.1.1",
    "markdown-it": "13.0.1",
    "nodehun": "3.0.2",
    "preact": "10.10.6"
  }
}
